{
  "breadcrumbs.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.cursorBlinking": "phase",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "Cascadia Code NF",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss19', 'ss20'",
  "editor.formatOnSave": true,
  "editor.guides.indentation": false,
  "editor.inlineSuggest.enabled": true,
  "editor.lightbulb.enabled": "off",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "top",
  "editor.stickyScroll.enabled": false,
  "editor.tabCompletion": "onlySnippets",
  "editor.wordWrapColumn": 120,
  "explorer.autoReveal": false,
  "explorer.incrementalNaming": "smart",
  "extensions.closeExtensionDetailsOnViewChange": true,
  "extensions.ignoreRecommendations": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.folders.color": "#616e88",
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.saturation": 0.6,
  "problems.autoReveal": false,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "search.collapseResults": "alwaysCollapse",
  "search.useGlobalIgnoreFiles": true,
  "telemetry.telemetryLevel": "off",
  "terminal.explorerKind": "external",
  "terminal.integrated.cursorStyle": "line",
  "update.enableWindowsBackgroundUpdates": false,
  "update.mode": "none",
  "window.autoDetectColorScheme": true,
  "window.enableMenuBarMnemonics": false,
  "window.zoomLevel": 1,
  "workbench.colorTheme": "Nord Light",
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredDarkColorTheme": "Nord",
  "workbench.quickOpen.preserveInput": true,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.renderIndentGuides": "none",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "update.showReleaseNotes": false,
  "workbench.preferredLightColorTheme": "Nord",
  "editor.guides.bracketPairs": "active",
  "chat.commandCenter.enabled": false,
  "workbench.activityBar.location": "top",
  "window.menuBarVisibility": "compact",
  "security.workspace.trust.untrustedFiles": "open",

  // File watching optimizations for large codebases
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/**": true,
    "**/.svn/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.cache/**": true,
    "**/target/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.coverage/**": true,
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/tmp/**": true,
    "**/temp/**": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  
  // Search exclusions for faster indexing
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/target": true,
    "**/.venv": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true
  },
  
  // File indexing optimizations
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  
  // Increase file watcher limit (important for large repos)
  "files.watcherInclude": [],
  
  // Performance: Disable unnecessary features
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": false,
  "editor.folding": true,
  "editor.foldingStrategy": "indentation",
  
  // WSL-specific optimizations
  "remote.WSL.fileWatcher.polling": true,
  "remote.WSL.fileWatcher.pollingInterval": 5000,
  "remote.WSL.useShellEnvironment": true,
  
  // Language server optimizations
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/.git",
      "**/dist",
      "**/build"
    ]
  },
  
  // Python language server optimizations
  "python.analysis.indexing": true,
  "python.analysis.packageIndexDepths": [
    { "name": "", "depth": 2 },
    { "name": "numpy", "depth": 1 },
    { "name": "pandas", "depth": 1 }
  ],
  "python.analysis.exclude": [
    "**/node_modules",
    "**/__pycache__",
    "**/.pytest_cache",
    "**/.mypy_cache",
    "**/venv",
    "**/.venv"
  ],
  
  // Rust analyzer optimizations
  "rust-analyzer.checkOnSave.enable": true,
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.procMacro.enable": true,
  
  // Git optimizations (already configured in .gitconfig, but IDE-specific)
  "git.enabled": true,
  "git.autofetch": false,
  "git.autoRepositoryDetection": true,
  "git.scanRepositories": [
    "/mnt/d/repositories"
  ],
  "git.path": "/usr/bin/git",
  
  // AI/Agentic mode optimizations
  "cursor.ai.enableCodebaseIndexing": true,
  "cursor.ai.maxContextFiles": 50,
  "cursor.ai.enableSemanticSearch": true,
  
  // Editor performance
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  
  // Terminal optimizations for WSL
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.persistentSessionReviveProcess": "onExit",
  "terminal.integrated.defaultProfile.windows": "Ubuntu-24.04 (WSL)",
  "terminal.integrated.profiles.windows": {
    "Ubuntu-24.04 (WSL)": {
      "path": "wsl.exe",
      "args": ["-d", "Ubuntu-24.04", "--exec", "zsh", "-l"]
    }
  },
  
  "files.associations": {
    "*.env.*": "dotenv",
    "*.config.*": "jsonc",
    "Dockerfile.*": "dockerfile",
    "*.dockerfile": "dockerfile"
  },
  
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false
}
